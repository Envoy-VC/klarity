{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "extends": ["./base.json"],
  "linter": {
    "domains": {
      "react": "all"
    }
  },
  "overrides": [
    {
      "include": [
        "**/*.d.ts",
        "*.config.ts",
        "*.config.js",
        "*.config.mjs",
        "*.config.cjs",
        "apps/web/src/app/**/*.tsx"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    }
  ]
}
